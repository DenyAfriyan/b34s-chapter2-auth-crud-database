<html lang='en'>
  <head>
    <title>Document</title>
    <!--CSS Bootstrap-->
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous' />
    <!--JS Bootstrap-->
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous'></script>
    <!--css-->
    <link rel='stylesheet' href='/public/assets/css/style.css' />
    <!--Font Awsome-->
    <script src='https://kit.fontawesome.com/a5a42482b5.js' crossorigin='anonymous'></script>
  </head>
  <body>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container'>
        <a class='navbar-brand' href='/'>
          <img src='/public/assets/img/logo.png' alt='' width='45px' />
        </a>
        <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='/'>Home</a>
            </li>
            {{#if isLogin}}
              <li class='nav-item'>
                <a class='nav-link' href='add-project'>Add Project</a>
              </li>
            {{/if}}
          </ul>
          <ul class='navbar-nav ms-auto mb-2 mb-lg-0'>
            {{#if isLogin}}
              <li class='nav-item'>
                <a class='nav-link' href='#'>Hello, {{user.name}}</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link' href='/logout'>logout</a>
              </li>
              <li class='nav-item'>
                <a href='contact' class='btn btn-dark'>Contact Me</a>
              </li>
            {{else}}
              <li class='nav-item'>
                <a class='nav-link' href='/login'>Login</a>
              </li>
              <li class='nav-item'>
                <a class='nav-link' href='/register'>Register</a>
              </li>
              <li class='nav-item'>
                <a href='contact' class='btn btn-dark'>Contact Me</a>
              </li>
            {{/if}}

          </ul>
        </div>
      </div>
    </nav>
    <header>
      <div class='p-5'>
        <h1 class='title text-center fw-bold'>{{project.title}}</h1>
      </div>
    </header>
    <section>
      <div class='container'>
        <div class='row'>
          <div class='col-8'>
            <img src='/public/assets/img/mock-up-hp.png' alt='' width='100%' />
          </div>
          <div class='col-4'>
            <div class='row'>
              <h2 class='fw-bold'>Duration</h2>

            </div>
            <div class='row py-2'>
              <span class='fs-4'><i class='fa-solid fa-calendar-days'></i>&nbsp; &nbsp; {{project.detail_date}}</span>
            </div>
            <div class='row py-2'>
              <span class='fs-4'><i class='fa-solid fa-clock'></i>&nbsp; &nbsp;{{project.duration}}</span>
            </div>

            <div class='row'><h2 class='fw-bold'>technologies</h2></div>
            <div class='row'>
              {{#each project.technologies}}

                <div class='col-6 p-3'>
                  <img src='/public/assets/img/{{this}}' alt='' width='45px' />

                </div>

              {{/each}}
            </div>

          </div>
        </div>
        <div class='row py-2'>
          <div class='body-content'>
            <p>{{project.description}}</p>
          </div>
        </div>
      </div>
    </section>
    <!-- CONTENT END-->

    <script src='/public/project.js'></script>
  </body>
</html>
            <div class='social py-3'>
              <a href=''><i id='logo' class='fa-brands fa-linkedin fa-2x me-3' style='color: black'></i></a>
              <a href=''><i id='logo' class='fa-brands fa-instagram-square fa-2x me-3' style='color: black'></i></a>
              <a href=''><i id='logo' class='fa-brands fa-facebook fa-2x me-3' style='color: black'></i></a>
              <a href=''><i id='logo' class='fa-brands fa-twitter-square fa-2x' style='color: black'></i></a>
            </div>
          </div>
          <div class='col-xs-10 col-lg-4 mx-auto'>
            <div class='card shadow-sm' style='width: 18rem; text-align: center'>
              <img src='/public/assets/img/profil.jpg' class='card-img-top' alt='...' width='320px' height='380px' />
              <div class='card-body'>
                <h5 class='card-title fw-bold'>Deny Afriyan</h5>
                <p class='card-text'>Fullstack Developer</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id='my-project'>
      <div class='container-fluid bg-white'>
        <h1 class='title-project fw-bold text-center py-3 fs-1'>My Project</h1>

        <div class='row row-cols-sm-1 row-cols-md-3 justify-content-xs-center p-5 mx-5'>
          {{#each project}}
            <div class='col p-3'>
              <div class='card p-2 shadow-lg rounded-3' style='width: 25rem;'>
                <img src='/uploads/{{this.image}}' class='card-img-top rounded-3' alt='...' />
                <div class='card-body d-flex flex-column'>
                  <a href='/detail-project/{{this.id}}' style='text-decoration: none; color:black'><h5 class='card-title fw-bold'>{{this.title}}</h5></a>
                  <p class='card-info fw-lighter fs-7 mb-3'>Durasi : {{this.duration}} | {{this.name}}</p>
                  <p class='card-text'>
                    {{this.description}}
                  </p>
                  <ul class='list-group list-group-horizontal' style='list-style-type: none'>
                    {{#each technologies}}
                      <li class='pe-2'><img src='/public/assets/img/{{this}}' width='30px' /></li>
                    {{/each}}
                  </ul>
                  {{#if isLogin}}
                    <div class='card-button text-center mt-5 align-self-center' style='text-align: end;'>
                      <a class='btn btn-dark btn-sm px-5 py-1 mx-2 align-self-end' href='/edit-project/{{this.id}}'>Edit</a>
                      <a class='btn btn-dark btn-sm px-5 py-1 mx-2' href='/delete-project/{{this.id}}' onclick="return confirm('Apa kamu yakin ingin menghapus project?');">Delete</a>
                    </div>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>

      </div>
    </section>
  </body>
